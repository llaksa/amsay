{
  "name": "platziverse-web",
  "version": "1.0.0",
  "description": "A Simple IoT Platform - Web Dashboard",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "prestart": "npm run build",
    "start-dev": "DEBUG=platziverse:* nodemon server.js",
    "prestart-dev": "npm run build",
    "build": "browserify -t babelify -t vueify client/app.js -o public/bundle.js",
    "lint": "standard"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/llaksa/amsay/tree/master/amsay.js/platziverse/platziverse-mqtt"
  },
  "author": "not me",
  "license": "MIT",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^16.1.1",
    "express-asyncify": "^1.0.0",
    "nodemon": "^1.17.2",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "standard": "^11.0.1",
    "vueify": "^9.4.1"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "chart.js": "^2.7.2",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "moment": "^2.21.0",
    "platziverse-agent": "file:../platziverse-agent",
    "random-material-color": "^1.0.3",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "vue": "^2.5.16",
    "vue-chartjs": "^3.2.1"
  }
}
